CREATE TABLE Perguntas (
    pergunta_id INTEGER PRIMARY KEY AUTOINCREMENT,
    texto_pergunta TEXT NOT NULL,
    resposta_correta_idx INTEGER NOT NULL,
    fonte_simulado VARCHAR(100),
    topico VARCHAR(100),
    justificativa TEXT
);

-- Criar a tabela de Opcoes
CREATE TABLE Opcoes (
    opcao_id INTEGER PRIMARY KEY AUTOINCREMENT,
    pergunta_id INTEGER NOT NULL,
    indice_opcao INTEGER NOT NULL,
    texto_opcao TEXT NOT NULL,
    FOREIGN KEY (pergunta_id) REFERENCES Perguntas (pergunta_id)
        ON DELETE CASCADE
);

